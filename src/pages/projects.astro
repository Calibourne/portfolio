---
import { siteConfig } from "../config";
import { UNCATEGORIZED } from "../constants/constants";
import {
	getAllTechStack,
	getFeaturedProjects,
	getProjectStats,
	getProjects,
	getTechFrequency,
} from "../utils/project-utils";
import ProjectsChart from "../components/ProjectsChart.svelte";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";
import ImageWrapper from "../components/misc/ImageWrapper.astro";
import { getFileDirFromPath } from "../utils/url-utils";

// 检查项目页面是否启用
if (!siteConfig.featurePages.projects) {
	return Astro.redirect("/404/");
}

// 获取项目统计信息
const stats = await getProjectStats();
const featuredProjects = await getFeaturedProjects();
const allTechStack = await getAllTechStack();
const techFrequency = await getTechFrequency();
const projects = await getProjects();

// 获取所有分类
const categories = [
	...new Set(projects.map((project) => project.data.category)),
];

// 按分类获取项目
const projectsByCategory = categories.reduce(
	(acc, category) => {
		acc[category] = projects.filter((p) => p.data.category === category);
		return acc;
	},
	{} as Record<string, typeof projects>,
);

const title = i18n(I18nKey.projects);
const subtitle = i18n(I18nKey.projectsSubtitle);

// 获取分类文本的国际化翻译
const getCategoryText = (category: string) => {
	switch (category) {
		case "web":
			return i18n(I18nKey.projectsWeb);
		case "mobile":
			return i18n(I18nKey.projectsMobile);
		case "desktop":
			return i18n(I18nKey.projectsDesktop);
		case "other":
			return i18n(I18nKey.projectsOther);
		case UNCATEGORIZED:
			return i18n(I18nKey.uncategorized);
		default:
			return category;
	}
};
---

<MainGridLayout title={title} description={subtitle}>
  <!-- 引入右侧边栏布局管理器 -->
  <script>
    import('../scripts/right-sidebar-layout.js');
    import { loadIconify } from "../utils/icon-loader";
    
    // 加载Iconify图标库
    loadIconify().catch((error) => {
      console.error("Failed to load Iconify:", error);
    });
  </script>
  <script define:vars={{ showMoreText: i18n(I18nKey.projectsShowMore), showLessText: i18n(I18nKey.projectsShowLess) }}>
    function initProjectToggles() {
      // Description expand/collapse
      document.querySelectorAll('.project-desc-wrapper').forEach((wrapper) => {
        const desc = wrapper.querySelector('.project-desc');
        const btn = wrapper.querySelector('.project-desc-toggle');
        if (!desc || !btn) return;

        if (desc.scrollHeight > desc.clientHeight) {
          btn.classList.remove('hidden');
        }

        btn.addEventListener('click', () => {
          const isNowClamped = desc.classList.toggle('line-clamp-2');
          btn.textContent = isNowClamped ? showMoreText : showLessText;
        });
      });

      // Tech stack expand/collapse
      document.querySelectorAll('.tech-stack-wrapper').forEach((wrapper) => {
        const btn = wrapper.querySelector('.tech-stack-toggle');
        if (!btn) return;
        const extras = wrapper.querySelectorAll('.tech-stack-extra');
        if (extras.length === 0) return;

        const countText = btn.textContent;
        btn.addEventListener('click', () => {
          const isHidden = extras[0].classList.contains('hidden');
          extras.forEach((el) => el.classList.toggle('hidden'));
          btn.textContent = isHidden ? showLessText : countText;
        });
      });
    }
    document.addEventListener('DOMContentLoaded', initProjectToggles);
    document.addEventListener('swup:contentReplaced', initProjectToggles);
    initProjectToggles();
  </script>
  <script>
    function initTechFilter() {
      window.addEventListener('tech-filter-change', ((event) => {
        const selectedTechs = (event as CustomEvent<string[]>).detail;
        const cards = document.querySelectorAll('.project-card[data-tech]');
        const categories = document.querySelectorAll('[data-category]');
        const noMatch = document.getElementById('projects-no-match');
        const hasFilter = selectedTechs.length > 0;

        let visibleCount = 0;

        cards.forEach((card) => {
          const cardTechs = JSON.parse(card.getAttribute('data-tech') || '[]') as string[];
          if (!hasFilter || selectedTechs.some((t) => cardTechs.includes(t))) {
            (card as HTMLElement).style.display = '';
            visibleCount++;
          } else {
            (card as HTMLElement).style.display = 'none';
          }
        });

        // Hide category sections where all cards are hidden
        categories.forEach((cat) => {
          const catCards = cat.querySelectorAll('.project-card[data-tech]');
          const anyVisible = Array.from(catCards).some(
            (c) => (c as HTMLElement).style.display !== 'none'
          );
          (cat as HTMLElement).style.display = anyVisible ? '' : 'none';
        });

        if (noMatch) {
          noMatch.classList.toggle('hidden', !hasFilter || visibleCount > 0);
        }
      }) as EventListener);
    }
    initTechFilter();
  </script>
  <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
    <div class="card-base z-10 px-9 py-6 relative w-full">
      <!-- 页面标题 -->
      <div class="flex flex-col items-start justify-center mb-8">
        <h1 class="text-4xl font-bold text-black/90 dark:text-white/90 mb-2 relative
                  before:w-1 before:h-8 before:rounded-md before:bg-[var(--primary)]
                  before:absolute before:top-1/2 before:-translate-y-1/2 before:-left-4">
          {i18n(I18nKey.projects)}
        </h1>
        <p class="text-lg text-black/60 dark:text-white/60">
          {i18n(I18nKey.projectsSubtitle)}
        </p>
      </div>

      <!-- 统计信息 -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
        <div class="bg-blue-500/10 dark:bg-blue-900/30 rounded-lg p-4 border border-blue-500/20 dark:border-blue-900/30 hover:shadow-lg transition-shadow duration-300">
          <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">{stats.total}</div>
          <div class="text-sm text-blue-600/70 dark:text-blue-400/70">{i18n(I18nKey.projectsTotal)}</div>
        </div>
        <div class="bg-green-500/10 dark:bg-green-900/30 rounded-lg p-4 border border-green-500/20 dark:border-green-900/30 hover:shadow-lg transition-shadow duration-300">
          <div class="text-2xl font-bold text-green-600 dark:text-green-400">{stats.byStatus.completed}</div>
          <div class="text-sm text-green-600/70 dark:text-green-400/70">{i18n(I18nKey.projectsCompleted)}</div>
        </div>
        <div class="bg-yellow-500/10 dark:bg-yellow-900/30 rounded-lg p-4 border border-yellow-500/20 dark:border-yellow-900/30 hover:shadow-lg transition-shadow duration-300">
          <div class="text-2xl font-bold text-yellow-600 dark:text-yellow-400">{stats.byStatus.inProgress}</div>
          <div class="text-sm text-yellow-600/70 dark:text-yellow-400/70">{i18n(I18nKey.projectsInProgress)}</div>
        </div>
        <div class="bg-purple-500/10 dark:bg-purple-900/30 rounded-lg p-4 border border-purple-500/20 dark:border-purple-900/30 hover:shadow-lg transition-shadow duration-300">
          <div class="text-2xl font-bold text-purple-600 dark:text-purple-400">{allTechStack.length}</div>
          <div class="text-sm text-purple-600/70 dark:text-purple-400/70">{i18n(I18nKey.projectsTechStack)}</div>
        </div>
      </div>

      <!-- 特色项目 -->
      {featuredProjects.length > 0 && (
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-black/90 dark:text-white/90 mb-4 relative
                    before:w-1 before:h-6 before:rounded-md before:bg-[var(--primary)]
                    before:absolute before:top-1/2 before:-translate-y-1/2 before:-left-4">
            {i18n(I18nKey.projectsFeatured)}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {featuredProjects.map((project) => (
              <div class="bg-transparent rounded-lg border border-black/10 dark:border-white/10 overflow-hidden hover:shadow-lg transition-shadow duration-300">
                {project.data.image && (
                  <div class="aspect-video overflow-hidden">
                    <ImageWrapper
                      src={project.data.image}
                      basePath={getFileDirFromPath(project.filePath || "")}
                      alt={project.data.title}
                      class="w-full h-full hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                )}
                <div class="p-6">
                  <div class="flex items-start justify-between mb-3">
                    <h3 class="text-xl font-semibold text-black/90 dark:text-white/90">
                      {project.data.title}
                    </h3>
                    <span class={`px-2 py-1 text-xs rounded-full ${
                      project.data.status === 'completed'
                        ? 'bg-green-600/20 text-green-700 dark:bg-green-900/30 dark:text-green-400'
                        : project.data.status === 'in-progress'
                        ? 'bg-yellow-600/20 text-yellow-700 dark:bg-yellow-900/30 dark:text-yellow-400'
                        : 'bg-gray-600/20 text-gray-700 dark:bg-gray-900/30 dark:text-gray-400'
                    }`}>
                      {i18n(project.data.status === 'completed' ? I18nKey.projectsCompleted :
                            project.data.status === 'in-progress' ? I18nKey.projectsInProgress :
                            I18nKey.projectsPlanned)}
                    </span>
                  </div>
                  <div class="project-desc-wrapper mb-4">
                    <p class="text-black/60 dark:text-white/60 project-desc line-clamp-2">
                      {project.data.description}
                    </p>
                    <button class="project-desc-toggle text-xs text-[var(--primary)] hover:underline cursor-pointer mt-1 hidden">
                      {i18n(I18nKey.projectsShowMore)}
                    </button>
                  </div>
                  <div class="flex flex-wrap gap-2 mb-4 tech-stack-wrapper">
                    {project.data.techStack.slice(0, 4).map((tech) => (
                      <span class="px-2 py-1 text-xs bg-blue-600/20 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400 rounded">
                        {tech}
                      </span>
                    ))}
                    {project.data.techStack.length > 4 && (
                      <button class="tech-stack-toggle px-2 py-1 text-xs bg-gray-600/20 text-gray-700 dark:bg-gray-900/30 dark:text-gray-400 rounded cursor-pointer hover:bg-gray-600/30 dark:hover:bg-gray-900/50 transition-colors">
                        +{project.data.techStack.length - 4}
                      </button>
                    )}
                    {project.data.techStack.slice(4).map((tech) => (
                      <span class="px-2 py-1 text-xs bg-blue-600/20 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400 rounded tech-stack-extra hidden">
                        {tech}
                      </span>
                    ))}
                  </div>
                  <div class="flex flex-wrap gap-2 text-sm">
                    {project.data.visitUrl && (
                      <a
                        href={project.data.visitUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn-gradient btn-gradient-primary btn-gradient-md"
                      >
                        <iconify-icon icon="material-symbols:open-in-new" width="18" height="18"></iconify-icon>
                        {i18n(I18nKey.projectsVisit)}
                      </a>
                    )}
                    {project.data.sourceCode && (
                      <a
                        href={project.data.sourceCode}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn-gradient btn-github btn-gradient-md"
                      >
                        <iconify-icon icon="mdi:github" width="18" height="18"></iconify-icon>
                        {i18n(I18nKey.projectsGitHub)}
                      </a>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- 按分类展示项目 -->
      <div class="space-y-8">
        {categories.map((category) => {
          const categoryProjects = projectsByCategory[category];
          if (categoryProjects.length === 0) return null;
          
          return (
            <div data-category={category}>
              <h2 class="text-2xl font-bold text-black/90 dark:text-white/90 mb-4 relative
                        before:w-1 before:h-6 before:rounded-md before:bg-[var(--primary)]
                        before:absolute before:top-1/2 before:-translate-y-1/2 before:-left-4">
                {getCategoryText(category)}
                <span class="text-lg font-normal text-black/60 dark:text-white/60 ml-2">
                  ({categoryProjects.length})
                </span>
              </h2>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {categoryProjects.map((project) => (
                  <div class="project-card bg-transparent rounded-lg border border-black/10 dark:border-white/10 overflow-hidden hover:shadow-lg transition-shadow duration-300" data-tech={JSON.stringify(project.data.techStack)}>
                    {project.data.image && (
                      <div class="aspect-video overflow-hidden">
                        <ImageWrapper
                          src={project.data.image}
                          basePath={getFileDirFromPath(project.filePath || "")}
                          alt={project.data.title}
                          class="w-full h-full hover:scale-105 transition-transform duration-300"
                        />
                      </div>
                    )}
                    <div class="p-4">
                      <div class="flex items-start justify-between mb-2">
                        <h3 class="text-lg font-semibold text-black/90 dark:text-white/90">
                          {project.data.title}
                        </h3>
                        <span class={`px-2 py-1 text-xs rounded-full shrink-0 ml-2 ${
                          project.data.status === 'completed'
                            ? 'bg-green-600/20 text-green-700 dark:bg-green-900/30 dark:text-green-400'
                            : project.data.status === 'in-progress'
                            ? 'bg-yellow-600/20 text-yellow-700 dark:bg-yellow-900/30 dark:text-yellow-400'
                            : 'bg-gray-600/20 text-gray-700 dark:bg-gray-900/30 dark:text-gray-400'
                        }`}>
                          {i18n(project.data.status === 'completed' ? I18nKey.projectsCompleted :
                                project.data.status === 'in-progress' ? I18nKey.projectsInProgress :
                                I18nKey.projectsPlanned)}
                        </span>
                      </div>
                      <div class="project-desc-wrapper mb-3">
                        <p class="text-black/60 dark:text-white/60 text-sm project-desc line-clamp-2">
                          {project.data.description}
                        </p>
                        <button class="project-desc-toggle text-xs text-[var(--primary)] hover:underline cursor-pointer mt-1 hidden">
                          {i18n(I18nKey.projectsShowMore)}
                        </button>
                      </div>
                      <div class="flex flex-wrap gap-1 mb-3 tech-stack-wrapper">
                        {project.data.techStack.slice(0, 3).map((tech) => (
                          <span class="px-2 py-1 text-xs bg-blue-600/20 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400 rounded">
                            {tech}
                          </span>
                        ))}
                        {project.data.techStack.length > 3 && (
                          <button class="tech-stack-toggle px-2 py-1 text-xs bg-gray-600/20 text-gray-700 dark:bg-gray-900/30 dark:text-gray-400 rounded cursor-pointer hover:bg-gray-600/30 dark:hover:bg-gray-900/50 transition-colors">
                            +{project.data.techStack.length - 3}
                          </button>
                        )}
                        {project.data.techStack.slice(3).map((tech) => (
                          <span class="px-2 py-1 text-xs bg-blue-600/20 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400 rounded tech-stack-extra hidden">
                            {tech}
                          </span>
                        ))}
                      </div>
                      <div class="flex flex-wrap gap-2 text-sm">
                        {project.data.visitUrl && (
                          <a
                            href={project.data.visitUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="btn-gradient btn-gradient-primary btn-gradient-md"
                          >
                            <iconify-icon icon="material-symbols:open-in-new" width="18" height="18"></iconify-icon>
                            {i18n(I18nKey.projectsVisit)}
                          </a>
                        )}
                        {project.data.sourceCode && (
                          <a
                            href={project.data.sourceCode}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="btn-gradient btn-github btn-gradient-md"
                          >
                            <iconify-icon icon="mdi:github" width="18" height="18"></iconify-icon>
                            {i18n(I18nKey.projectsGitHub)}
                          </a>
                        )}
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          );
        })}
      </div>

      <!-- 技术栈统计图表 -->
      <div class="mt-12 pt-8 border-t border-black/10 dark:border-white/10">
        <h2 class="text-2xl font-bold text-black/90 dark:text-white/90 mb-4 relative
                  before:w-1 before:h-6 before:rounded-md before:bg-[var(--primary)]
                  before:absolute before:top-1/2 before:-translate-y-1/2 before:-left-4">
          {i18n(I18nKey.projectsTechChart)}
        </h2>
        <ProjectsChart
          techFrequency={techFrequency}
          clearFilterText={i18n(I18nKey.projectsClearFilter)}
          noMatchText={i18n(I18nKey.projectsNoMatch)}
          client:load
        />
      </div>

      <!-- No results message (hidden by default) -->
      <div id="projects-no-match" class="hidden mt-8 text-center py-12 text-black/50 dark:text-white/50">
        <p class="text-lg">{i18n(I18nKey.projectsNoMatch)}</p>
      </div>
    </div>
  </div>
</MainGridLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>