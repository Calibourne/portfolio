---
import { siteConfig } from "../config";
import {
	getFeaturedResearch,
	getResearchStats,
	researchData,
} from "../data/research";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";
import { url } from "../utils/url-utils";

if (!siteConfig.featurePages.research) {
	return Astro.redirect("/404/");
}

const stats = getResearchStats(researchData);
const featuredResearch = getFeaturedResearch(researchData);

// Group by year, descending
const years = [...new Set(researchData.map((r) => r.year))].sort(
	(a, b) => b - a,
);
const byYear = years.reduce(
	(acc, year) => {
		acc[year] = researchData.filter((r) => r.year === year);
		return acc;
	},
	{} as Record<number, typeof researchData>,
);

// All unique tags
const allTags = [
	...new Set(researchData.flatMap((r) => r.tags ?? [])),
].sort();

const title = i18n(I18nKey.research);
const subtitle = i18n(I18nKey.researchSubtitle);

const statusBadge = (status: string) => {
	switch (status) {
		case "published":
			return "bg-green-600/20 text-green-700 dark:bg-green-900/30 dark:text-green-400";
		case "in-review":
			return "bg-yellow-600/20 text-yellow-700 dark:bg-yellow-900/30 dark:text-yellow-400";
		case "in-progress":
			return "bg-blue-600/20 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400";
		case "preprint":
			return "bg-purple-600/20 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400";
		default:
			return "bg-gray-600/20 text-gray-700 dark:bg-gray-900/30 dark:text-gray-400";
	}
};

const statusLabel = (status: string) => {
	switch (status) {
		case "published":
			return i18n(I18nKey.researchStatusPublished);
		case "in-review":
			return i18n(I18nKey.researchStatusInReview);
		case "in-progress":
			return i18n(I18nKey.researchStatusInProgress);
		case "preprint":
			return i18n(I18nKey.researchStatusPreprint);
		default:
			return status;
	}
};
---

<MainGridLayout title={title} description={subtitle}>
  <script>
    import('../scripts/right-sidebar-layout.js');
    import { loadIconify } from "../utils/icon-loader";
    loadIconify().catch((error) => {
      console.error("Failed to load Iconify:", error);
    });
  </script>

  <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
    <div class="card-base z-10 px-9 py-6 relative w-full">

      <!-- Page title -->
      <div class="flex flex-col items-start justify-center mb-8">
        <h1 class="text-4xl font-bold text-black/90 dark:text-white/90 mb-2 relative
                  before:w-1 before:h-8 before:rounded-md before:bg-[var(--primary)]
                  before:absolute before:top-1/2 before:-translate-y-1/2 before:-left-4">
          {i18n(I18nKey.research)}
        </h1>
        <p class="text-lg text-black/60 dark:text-white/60">
          {i18n(I18nKey.researchSubtitle)}
        </p>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        <div class="bg-blue-500/10 dark:bg-blue-900/30 rounded-lg p-4 border border-blue-500/20 dark:border-blue-900/30 hover:shadow-lg transition-shadow duration-300">
          <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">{stats.total}</div>
          <div class="text-sm text-blue-600/70 dark:text-blue-400/70">{i18n(I18nKey.researchTotal)}</div>
        </div>
        <div class="bg-green-500/10 dark:bg-green-900/30 rounded-lg p-4 border border-green-500/20 dark:border-green-900/30 hover:shadow-lg transition-shadow duration-300">
          <div class="text-2xl font-bold text-green-600 dark:text-green-400">{stats.published}</div>
          <div class="text-sm text-green-600/70 dark:text-green-400/70">{i18n(I18nKey.researchPublished)}</div>
        </div>
        <div class="bg-yellow-500/10 dark:bg-yellow-900/30 rounded-lg p-4 border border-yellow-500/20 dark:border-yellow-900/30 hover:shadow-lg transition-shadow duration-300">
          <div class="text-2xl font-bold text-yellow-600 dark:text-yellow-400">{stats.inReview}</div>
          <div class="text-sm text-yellow-600/70 dark:text-yellow-400/70">{i18n(I18nKey.researchInReview)}</div>
        </div>
        <div class="bg-purple-500/10 dark:bg-purple-900/30 rounded-lg p-4 border border-purple-500/20 dark:border-purple-900/30 hover:shadow-lg transition-shadow duration-300">
          <div class="text-2xl font-bold text-purple-600 dark:text-purple-400">{stats.inProgress}</div>
          <div class="text-sm text-purple-600/70 dark:text-purple-400/70">{i18n(I18nKey.researchInProgress)}</div>
        </div>
      </div>

      <!-- Featured publications -->
      {featuredResearch.length > 0 && (
        <div class="mb-10">
          <h2 class="text-2xl font-bold text-black/90 dark:text-white/90 mb-4 relative
                    before:w-1 before:h-6 before:rounded-md before:bg-[var(--primary)]
                    before:absolute before:top-1/2 before:-translate-y-1/2 before:-left-4">
            {i18n(I18nKey.researchFeatured)}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {featuredResearch.map((pub) => (
              <div class="bg-transparent rounded-lg border border-black/10 dark:border-white/10 overflow-hidden hover:shadow-lg transition-shadow duration-300">
                {pub.image && (
                  <div class="aspect-video overflow-hidden">
                    <img
                      src={url(pub.image)}
                      alt={pub.title}
                      class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                )}
                <div class="p-6">
                  <div class="flex items-start justify-between gap-2 mb-2">
                    <h3 class="text-lg font-semibold text-black/90 dark:text-white/90 leading-snug">
                      {pub.title}
                    </h3>
                    <span class={`px-2 py-1 text-xs rounded-full shrink-0 ${statusBadge(pub.status)}`}>
                      {statusLabel(pub.status)}
                    </span>
                  </div>
                  <p class="text-sm text-black/50 dark:text-white/50 mb-2">
                    {pub.authors.join(", ")}
                  </p>
                  <p class="text-sm font-medium text-[var(--primary)] mb-3">
                    {pub.venueShort ?? pub.venue}{pub.year ? ` Â· ${pub.year}` : ""}
                  </p>
                  <p class="text-sm text-black/60 dark:text-white/60 mb-4 line-clamp-3">
                    {pub.abstract}
                  </p>
                  <div class="flex flex-wrap gap-2">
                    {pub.pdf && (
                      <a href={pub.pdf} target="_blank" rel="noopener noreferrer"
                        class="btn-gradient btn-gradient-primary btn-gradient-md">
                        <iconify-icon icon="material-symbols:picture-as-pdf" width="16" height="16"></iconify-icon>
                        {i18n(I18nKey.researchPDF)}
                      </a>
                    )}
                    {pub.doi && (
                      <a href={`https://doi.org/${pub.doi}`} target="_blank" rel="noopener noreferrer"
                        class="btn-gradient btn-gradient-primary btn-gradient-md">
                        <iconify-icon icon="material-symbols:link" width="16" height="16"></iconify-icon>
                        {i18n(I18nKey.researchDOI)}
                      </a>
                    )}
                    {pub.arxiv && (
                      <a href={`https://arxiv.org/abs/${pub.arxiv}`} target="_blank" rel="noopener noreferrer"
                        class="btn-gradient btn-gradient-primary btn-gradient-md">
                        <iconify-icon icon="simple-icons:arxiv" width="16" height="16"></iconify-icon>
                        {i18n(I18nKey.researchArXiv)}
                      </a>
                    )}
                    {pub.code && (
                      <a href={pub.code} target="_blank" rel="noopener noreferrer"
                        class="btn-gradient btn-github btn-gradient-md">
                        <iconify-icon icon="mdi:github" width="16" height="16"></iconify-icon>
                        {i18n(I18nKey.researchCode)}
                      </a>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- Publications by year -->
      <div class="space-y-10">
        {years.map((year) => {
          const pubs = byYear[year];
          if (!pubs || pubs.length === 0) return null;
          return (
            <div>
              <h2 class="text-2xl font-bold text-black/90 dark:text-white/90 mb-4 relative
                        before:w-1 before:h-6 before:rounded-md before:bg-[var(--primary)]
                        before:absolute before:top-1/2 before:-translate-y-1/2 before:-left-4">
                {year}
                <span class="text-lg font-normal text-black/60 dark:text-white/60 ml-2">
                  ({pubs.length})
                </span>
              </h2>
              <div class="space-y-4">
                {pubs.map((pub) => (
                  <div class="rounded-lg border border-black/10 dark:border-white/10 p-5 hover:shadow-lg transition-shadow duration-300">
                    <div class="flex items-start justify-between gap-3 mb-1">
                      <h3 class="text-base font-semibold text-black/90 dark:text-white/90 leading-snug">
                        {pub.title}
                      </h3>
                      <span class={`px-2 py-1 text-xs rounded-full shrink-0 ${statusBadge(pub.status)}`}>
                        {statusLabel(pub.status)}
                      </span>
                    </div>
                    <p class="text-sm text-black/50 dark:text-white/50 mb-1">
                      {pub.authors.join(", ")}
                    </p>
                    <p class="text-sm font-medium text-[var(--primary)] mb-3">
                      {pub.venueShort ?? pub.venue}
                    </p>
                    <p class="text-sm text-black/60 dark:text-white/60 mb-3 line-clamp-2">
                      {pub.abstract}
                    </p>
                    {pub.tags && pub.tags.length > 0 && (
                      <div class="flex flex-wrap gap-1 mb-3">
                        {pub.tags.map((tag) => (
                          <span class="px-2 py-1 text-xs bg-blue-600/20 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400 rounded">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}
                    <div class="flex flex-wrap gap-2">
                      {pub.pdf && (
                        <a href={pub.pdf} target="_blank" rel="noopener noreferrer"
                          class="btn-gradient btn-gradient-primary btn-gradient-md">
                          <iconify-icon icon="material-symbols:picture-as-pdf" width="16" height="16"></iconify-icon>
                          {i18n(I18nKey.researchPDF)}
                        </a>
                      )}
                      {pub.doi && (
                        <a href={`https://doi.org/${pub.doi}`} target="_blank" rel="noopener noreferrer"
                          class="btn-gradient btn-gradient-primary btn-gradient-md">
                          <iconify-icon icon="material-symbols:link" width="16" height="16"></iconify-icon>
                          {i18n(I18nKey.researchDOI)}
                        </a>
                      )}
                      {pub.arxiv && (
                        <a href={`https://arxiv.org/abs/${pub.arxiv}`} target="_blank" rel="noopener noreferrer"
                          class="btn-gradient btn-gradient-primary btn-gradient-md">
                          <iconify-icon icon="simple-icons:arxiv" width="16" height="16"></iconify-icon>
                          {i18n(I18nKey.researchArXiv)}
                        </a>
                      )}
                      {pub.code && (
                        <a href={pub.code} target="_blank" rel="noopener noreferrer"
                          class="btn-gradient btn-github btn-gradient-md">
                          <iconify-icon icon="mdi:github" width="16" height="16"></iconify-icon>
                          {i18n(I18nKey.researchCode)}
                        </a>
                      )}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          );
        })}
      </div>

      <!-- Research areas / tags -->
      {allTags.length > 0 && (
        <div class="mt-12 pt-8 border-t border-black/10 dark:border-white/10">
          <h2 class="text-2xl font-bold text-black/90 dark:text-white/90 mb-4">
            {i18n(I18nKey.researchTags)}
          </h2>
          <div class="flex flex-wrap gap-2">
            {allTags.map((tag) => (
              <span class="px-3 py-1 text-sm bg-gray-600/20 text-gray-700 dark:bg-gray-800 dark:text-gray-300 rounded-full">
                {tag}
              </span>
            ))}
          </div>
        </div>
      )}

    </div>
  </div>
</MainGridLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
